#newBook.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4#addBookLabel.modal-title Add Book
      .modal-body
        form
          .form-group
            label(for='bookTitle') Book Title
            input#bookTitleInput.form-control(type='text',  placeholder='Enter Book Title')
          .form-group
            label(for='bookPublishDate') Author
            input#bookPublishDateInput.form-control(type='text', placeholder='Password')
          .form-group
            label(for='bookAuthor') Author
            input#bookAuthorInput.form-control(type='date', placeholder='Password')
          .form-group
            label(for='bookDescription') Book Synopsis
            textarea#exampleTextarea.form-control(rows='3')
          .form-group
            label(for='bookTitle') Image URL
            input#bookTitleInput.form-control(type='text',  placeholder='Enter Book IMG URL')
            small#fileHelp.form-text.text-muted
              | Copy and pase the URL so we can judge the book by its cove
          .form-check
            label.form-check-label
              input.form-check-input(type='checkbox')
              |       Check me out
          button.btn.btn-primary(type='submit') Save changes
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='submit') Save changes

  mixin listGenres( genres )
    .form-group
      label(for='exampleSelect1') Example select
      select#exampleSelect1.form-control(multiple='')
        for genre in genres
          option genre
